<%- include('../partials/header') %>

<form id="add-ticket-form" action="/flights/<%= flightId %>/tickets" method="POST">
    <label>Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?" value="Format: [A-F][1-99]">
    <label>Price: $</label>
    <input type="number" name="price" min="0" value="0">
    <input type="submit" value="Add Ticket">
</form>

